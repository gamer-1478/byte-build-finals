<div class="store-main">
    <div class="left-side">
        <h1 class="main-name"> <%= product.name %> </h1>
        <img class="product-image" src="<%= product.image %>">
    </div>
    <div class="right-side">
        <h3 class="description"> <%= product.description %> </h3>

        <p class="category"> <span class="bold">Category:</span> <%= product.type %> </p>
        <p class="stock"> <span class="bold">Stock Left:</span> <%= product.quantity %> </p>
        <br><br>
        <h2 class="price"> â‚¹ <%= product.price %> </h2>
        <div class="buy-form" method="post">
            <input type="number" placeholder="Qty." id="qty" name="qty" min="1" max="<%= product.quantity %>" value="1">
            <button class="buy-button" onclick="submit()">Add To Cart</button>
        </div>
    </div>
</div>

<div class="reviews-container">
    <h1 class="main-name">Reviews</h1>
    <form class="review-form" action="/review/<%-product.productId%>" method="post">
        <label for="rating">Rate The Product</label>
        <select name="rating" id="rating" required="true">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <br><br>
        <label for="comment">Write a review</label>
        <br>
        <textarea name="comment" id="comment" cols="60" rows="5"></textarea><br>
        <button class="pay-later" type="submit">Publish Review</button>
    </form>
    <br><br>
    <div>
        <% product.reviews.forEach(review => { %>
        <div class="each-comment">
            <h2> By: <strong> <%= review.name %> </strong>, Rating: <%= review.rating %> </h2>
            <% if (review.verified == true){ %>
            <p style="color: #16e15e;">Verified</p>
            <% }else{ %>
            <p style="color: red;">Not Verified</p>
            <% }%>
            <h5> <%= review.comment %> </h5>
        </div>
        <% }) %>
        <br><br>
    </div>
</div>


<style>
    .each-comment {
        margin: 20px;
        padding: 20px;
        border: 1px solid #eee;
        border-radius: 10px;
    }
    .pay-later {
        z-index: 1;
        width: max-content;
        height: max-content;
        margin-top: 20px;
        padding: 6px;
        background: #111;
        color: #eee;
        cursor: pointer;
        font-size: 19px;
        border: none;
        border-radius: 7px;
    }

    .review-form {
        margin-top: 20px;
    }

    .reviews-container {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .price {
        font-size: 2em;
    }

    .buy-button {
        width: 150px;
        height: 50px;
        background: #111;
        color: #eee;
        cursor: pointer;
        font-size: 19px;
        border: none;
        border-radius: 7px;
    }

    input {
        width: 150px;
        height: 50px;
        padding-left: 10px;
        font-size: 15px;
        padding-right: 5px;
        border-radius: 9px;
        border: 1px solid #111;
    }

    .category {
        margin-top: 30px;
    }

    .bold {
        font-weight: bold;
    }

    .description {
        font-weight: 500;
        width: 80%;
        white-space: pre-line;
    }

    .right-side {
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        width: 50%;
    }

    .left-side {
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 50%;
    }

    .store-main {
        display: flex;
        align-items: center;
    }

    .main-name {
        font-size: 42px;
    }

    .product-image {
        width: 70%;
    }

    @media screen and (max-width: 770px) {
        .buy-form {
            display: flex;
            flex-direction: row;
            width: 70%;
            justify-content: space-between;
            margin-bottom: 50px;

        }

        .store-main {
            flex-direction: column;
        }

        .left-side,
        .right-side {
            width: 100%;
        }

        .right-side {
            align-items: center;
        }

        .category,
        .stock {
            font-size: 20px;
            width: 80%;
        }

        .price {
            width: 70%;
        }

    }
</style>

<script>
    var notyf = new Notyf();
    async function submit() {
        var qty = document.getElementById("qty").value;
        await fetch("/store/buy/<%=product.productId%>", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({
                qty: qty
            })
        }).then(async (response) => {
            res = await response.json()
            if (res.success == true) {
                await notyf.success(res.msg);
            } else {
                await notyf.error(res.msg)
            }
        });
    }
</script>