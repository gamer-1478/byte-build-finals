<div>
    <form action="/review/<%-product.productId%>" method="post">
        <label for="rating">Rate Product</label>
        <select name="rating" id="rating" required="true">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>          
          <br><br>
        <label for="comment">Write a review</label>
        <br><br>
        <textarea name="comment" id="comment" cols="40" rows="10"></textarea>
        <button type="submit">Publish Review</button>
    </form>
</div>